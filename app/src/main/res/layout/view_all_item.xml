<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/lectureImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ee_1"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lecNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lecture Number 01"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lectureImage"
        app:layout_constraintTop_toTopOf="@id/lectureImage" />

    <TextView
        android:id="@+id/watchNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch Now"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/price"
        app:layout_constraintLeft_toLeftOf="@id/lecNumber"
        app:layout_constraintTop_toBottomOf="@+id/lecNumber" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="FREE"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/watchNow" />

    <TextView
        android:id="@+id/prodOldPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:background="@drawable/strike_through"
        android:text="Rs 10/-"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/price"
        app:layout_constraintLeft_toRightOf="@id/price" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#20000000"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lectureImage"
        />


</androidx.constraintlayout.widget.ConstraintLayout>