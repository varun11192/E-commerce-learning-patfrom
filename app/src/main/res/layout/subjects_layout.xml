<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subjectsContrLayout"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/slider_background"
    android:paddingTop="40dp"
    android:paddingBottom="40dp"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/subject_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text View"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/subjectsContrLayout"
        app:layout_constraintRight_toRightOf="@id/subjectsContrLayout"
        app:layout_constraintTop_toTopOf="@id/subjectsContrLayout"
        app:layout_constraintBottom_toBottomOf="@+id/subjectsContrLayout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>